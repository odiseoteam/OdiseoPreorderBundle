{% set state = preorder.state.name %}
{% set label = 'primary' %}

{% if 'pending' == state %}
    {% set label = 'warning' %}
{% elseif 'pagada' == state or 'verificada' == state or 'finalizada' == state %}
    {% set label = 'success' %}
{% elseif 'rechazada_vendor' == state or 'rechazada_buyer' == state %}
    {% set label = 'danger' %}
{% endif %}

<span class="label label-{{ label }}">{{ state|title }}</span>
